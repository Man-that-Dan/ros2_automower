            <updateRate>50</updateRate>
            <topicName>sensor/sonar_front_left</topicName>
            <frameName>base_sonar_front_left</frameName>
            <fov>0.2967</fov>
        </plugin>
    </sensor>  
    </gazebo>

    <!-- SONAR SENSOR LEFT-->

    <joint name="sonar_left_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin rpy="0 0 ${pi/2}" xyz="0.2765 0.112925 0.10134" />
