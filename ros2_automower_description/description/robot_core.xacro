<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.15499 0 -0.02125"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.287615 0 0.114675"/>
            <geometry>
                <box size="0.57523 0.22585 0.22935"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.287615 0 0.114675"/>
            <geometry>
                <box size="0.57523 0.22585 0.22935"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.57523" y="0.22585" z="0.22935">
            <origin xyz="0.287615 0 0.114675" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/white</material>
    </gazebo>

    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.137925 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0925" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0925" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.0925">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/blue</material>
    </gazebo>

    <!-- RIGHT WHEEL LINK -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.137925 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0925" length="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0925" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.0925">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/blue</material>
    </gazebo>

    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.41 0 -0.025"/>
    </joint>


    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/black</material>
        <mu1 value="0.0001"/>
        <mu2 value="0.0001"/>
    </gazebo>

    <!-- RASPBERRY PI -->

    <joint name="raspberry_pi_joint" type="fixed">
        <parent link="chassis"/>
        <child link="raspberry_pi"/>
        <origin xyz="0.29215 -0.04559 0.015"/>
    </joint>


    <link name="raspberry_pi">
        <visual>
            <geometry>
                <mesh filename="package://ros2_automower_description/meshes/pi_3b.stl"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <!-- CHARGING CONTACTS -->

    <joint name="left_charging_contact_joint" type="fixed">
        <parent link="chassis"/>
        <child link="left_charging_contact_link"/>
        <origin xyz="-0.02535 0.06 0.11647"/>
    </joint>

    <link name="left_charging_contact_link">
        <visual>
            <geometry>
                <mesh filename="package://ros2_automower_description/meshes/left_power_contact.stl"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://ros2_automower_description/meshes/left_power_contact.stl"/>
            </geometry>
        </collision>
    </link>

    <joint name="right_charging_contact_joint" type="fixed">
        <parent link="chassis"/>
        <child link="right_charging_contact_link"/>
        <origin xyz="-0.02535 -0.06 0.11647"/>
    </joint>

    <link name="right_charging_contact_link">
        <visual>
            <geometry>
                <mesh filename="package://ros2_automower_description/meshes/right_power_contact.stl"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://ros2_automower_description/meshes/right_power_contact.stl"/>
            </geometry>
        </collision>
    </link>

    <!-- SENSORS -->

    <!-- GPS -->

    <joint name="gps_joint" type="fixed">
        <parent link="chassis"/>
        <child link="gps_link"/>
        <origin xyz="0.34488 0 0.23987" />
    </joint>

    <link name="gps_link">
        <visual>
            <geometry>
                <box size="0.04 0.04 0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <gazebo reference="gps_link">
        <sensor name="gps_sensor" type="gps">
            <always_on>true</always_on>
            <update_rate>1.0</update_rate>
            <plugin name="gps_controller" filename="libgazebo_ros_gps_sensor.so">
                <ros>
                    <!-- <namespace>/br</namespace> -->
                    <remapping>gps_controller/out:=gps</remapping>
                </ros>
                <frame_name>gps_link</frame_name>
            </plugin>
        </sensor>
        <material>Gazebo/Grey</material>
    </gazebo>

    <!--IMU-->

    <joint name="imu_joint" type="fixed">
        <parent link="raspberry_pi"/>
        <child link="imu_link"/>
        <origin xyz="-0.02756 0.06226 0" rpy="0 0 ${pi}"/>
    </joint>

    <link name="imu_link">
        <visual>
            <geometry>
                <mesh filename="package://ros2_automower_description/meshes/GY-521_imu.stl" scale="0.1 0.1 0.1"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <gazebo reference="imu_link">
        <sensor name="br_imu" type="imu">
            <always_on>true</always_on>
            <update_rate>100</update_rate>
            <imu>
            <angular_velocity>
                <x>
                <noise type="gaussian">
                    <mean>0.0</mean>
                    <stddev>2e-4</stddev>
                </noise>
                </x>
                <y>
                <noise type="gaussian">
                    <mean>0.0</mean>
                    <stddev>2e-4</stddev>
                </noise>
                </y>
                <z>
                <noise type="gaussian">
                    <mean>0.0</mean>
                    <stddev>2e-4</stddev>
                </noise>
                </z>
            </angular_velocity>
            <linear_acceleration>
                <x>
                <noise type="gaussian">
                    <mean>0.0</mean>
                    <stddev>1.7e-2</stddev>
                </noise>
                </x>
                <y>
                <noise type="gaussian">
                    <mean>0.0</mean>
                    <stddev>1.7e-2</stddev>
                </noise>
                </y>
                <z>
                <noise type="gaussian">
                    <mean>0.0</mean>
                    <stddev>1.7e-2</stddev>
                </noise>
                </z>
            </linear_acceleration>
            </imu>
            <plugin name="bytes_imu" filename="libgazebo_ros_imu_sensor.so">
                <ros>
                    <namespace>imu</namespace>
                    <remapping>~/out:=data</remapping>
                </ros>
                <initial_orientation_as_reference>false</initial_orientation_as_reference>
            </plugin>
        </sensor>
    </gazebo>

    <!-- CAMERA -->

    <joint name="camera_joint" type="fixed">
        <axis xyz="0 1 0" />
        <origin rpy="0 0 0" xyz="0.52547 0 0.25614" />
        <parent link="chassis"/>
        <child link="camera_link"/>
    </joint>

    <link name="camera_link">
        <visual>
            <geometry>
                <mesh filename="package://ros2_automower_description/meshes/Kinect.stl"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <joint name="camera_optical_joint" type="fixed">
        <parent link="camera_link"/>
        <child link="camera_link_optical"/>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 ${-pi/2}"/>
    </joint>

    <link name="camera_link_optical"></link>

